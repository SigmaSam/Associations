<p id="notice"><%= notice %></p>
<p>Welcome: <b><%= session[:username] %></b> <a href="/access">Log Out</a></p>
<h1>Available Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Location</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.creator_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'attend', "/attend/#{event.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>My created events</h2>
<% @user.events.each do |e| %>
  <p><b>Event:</b> <%= e.title %> <b>Date:</b> <%= e.date %></p>
<% end %>

<br>

<%= link_to 'New Event', new_event_path %>
